}
.bottomAnim {
  border: none;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #2851A6 url("https://i.sstatic.net/spmUM.gif") left repeat-x;
  background-size: auto 65%;
  background-position: bottom;
  z-index: 1000;
}
